%form{:action => url, :method => "post", :name => "edit"}
  .postzoom
    %label Title
    %h2.title
      %input{:type=>"text", :name=>"title", :value => post.title}
    %label Tags
    %p.meta
      %input{:type=>"text", :name=>"tags", :value => post.tags}
    %p.meta= post.created_at
    %label Post
    %div.entry
      %textarea{:name=>"body"}= post.body
    %div.edit
      %input{:type=>"submit", :value=>"Save"}
