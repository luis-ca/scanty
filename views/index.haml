- posts.each do |post|
  .post
    %p.date
      =post[:created_at].strftime("%b")
      %strong= post[:created_at].strftime("%d")
    %h2.title
      %a{:href => post.url}= post[:title]
    %p.meta
      %small
        = post.linked_tags
    .entry
      = post.summary_html
      - if post.more?
        %a{:href=>post.url} Continue reading &raquo;

- if posts.empty?
  %h2
    %p Looks like this is a fresh install of Scanty.
    %p
      %a{:href => "/auth"} Log in</a>, then 
      %a{:href=>"/posts/new"} create a post
- else
  #older_posts
    %a{:href=>"/past"} Archive

- if admin?
  #new_post
    %a{:href=>"/posts/new"} New post

